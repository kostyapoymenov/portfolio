extends ../loyout

block variables
    - var title= "Обо мне"

block content
    section.hero
        .hero__links
            .social
                -
                    var socials = [
                    ['vk','https://vk.com/id294245982'],
                    ['github','https://github.com/kostyapoymenov'],
                    ['in','https://ru.linkedin.com/']
                    ]
                ul.social__list
                    each social in socials
                        li.social__item
                            a(class=`social__link social__link_${social[0]}` href=`${social[1]}`)
                                svg.social__link_svg(width='100%' height='100%')
                                    use(xlink:href=`images/icons/sprite.svg#${social[0]}`)
        .hero__menu.hamburger
            a.hamburger__link
                span.hamburger__link_item
        .hero_main
            .user.hero__user
                .user__img
                    img.user__avatar(src="images/content/avatar.jpg")
                .user__desc
                    .user__name Poymenov Konstantin
                    .user__text Личный сайт разработчика
                .hero-star
                    img.hero-star__img(src="images/bg/stars1.svg")
        .arrow.hero__scroll-button.arrow__down
            a.arrow__link
                svg.arrow__svg(width='26' height='17')
                    use(xlink:href=`images/icons/sprite.svg#arrow_down`)

        //.arrow-down.hero__scroll-button
