    section.about
        .about__left
            .about__inner
                .triangle.about__triangle-left
                    svg.triangle-shape(width='100%' height='100%' viewBox="0 0 900 120")
                        use(xlink:href='images/icons/sprite.svg#about_bg_left')
                .about__left_title
                    .block-title Обо мне
                        svg.title-star(width='100' height='100')
                            use.title-star__svg(xlink:href=`images/icons/sprite.svg#stars2`)
                .about__left_description
                    .user-desc
                        .user-desc__image
                            img.user-desc__avatar(src="images/content/avatar.jpg")
