                    svg.triangle-shape(width='100%' height='100%' viewBox="0 0 900 120")
                        use(xlink:href='images/icons/sprite.svg#about_bg_right')
                .about__right_title
                    .block-subtitle Чем я могу быть вам полезен
                .about__right_desc.text-content
                    p Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                .about__right_content
                    ul.skills-list
                        each item in ['Frontend', 'Backend', 'Workflow']
                            li.skills-list__item
                                .skills-row
                                    .skills-row__title #{item}
                                    ul.skills-row__list
                                        -
                                            var skills = [
                                                ['HTML5','CSS3','Javascript&Jquery'],
                                                ['PHP','mySQL','Node.js','MongoDB'],
                                                ['Git','Gulp','Bower']
                                            ]
                                        each item in skills
                                            li.skills-row__item
                                                .skill
                                                    svg.skill__circle(viewBox="0 0 110 110")
                                                        circle( r="45" cx="50%" cy="50%" fill="none" class="circle__first")
                                                        circle( r="45" cx="50%" cy="50%" transform="rotate(-90 55 55)" class="circle__second circle-25")
                                                    .skill__title #{skills[0][1]}
    section.map
